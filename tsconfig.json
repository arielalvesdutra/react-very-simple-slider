{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2017",
      "es5",
      "es6",
      "es7"
    ],
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "*/**/*.test.tsx",
    "*/**/*.test.ts"
  ]
}
